<ml:Event xmlns:ml="http://developer.marklogic.com/site/internal"
      xmlns:form  ="http://developer.marklogic.com/site/internal/form"
      xmlns:label ="http://developer.marklogic.com/site/internal/form/attribute-labels"
      xmlns:values="http://developer.marklogic.com/site/internal/form/values"
      xmlns="http://www.w3.org/1999/xhtml"
      status="Draft" label:status="Status"         values:status="Draft Published"
      user-group=""  label:user-group="User Group" values:user-group="_ bmug denmark markups mugfr novamug nymug mugl"
      form:uri-prefix-for-new-docs="/events/">
  <ml:title form:label="Title"
            form:wide="yes"/>
  <ml:created/>
  <ml:last-updated/>
  <ml:short-description form:label="Short Description" form:wide="yes" />
  <ml:description form:label="Description"
                  form:type="textarea"
                  form:class="richtext" />
  <ml:details>
    <ml:date form:label="Date"/>
    <ml:time form:label="Time"/>
    <ml:location form:label="Location" form:lines="6" form:type="textarea"/>
    <ml:topic form:label="Topic" form:repeating="yes"/>
    <ml:presenter form:label="Presenter" form:repeating="yes"/>
  </ml:details>
</ml:Event>
