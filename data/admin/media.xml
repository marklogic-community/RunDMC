<?xml version="1.0" encoding="UTF-8"?>
<ml:page xmlns="http://www.w3.org/1999/xhtml" xmlns:ml="http://developer.marklogic.com/site/internal">
  <h3>Media</h3>

  <div class="well">
    <p>Upload binary files, then ask a member of the Community Team to publish.</p>
  </div>

  <form action="/admin/controller/upload.xqy" class="add_post" enctype="multipart/form-data" method="post">
    <fieldset>
      <legend>Upload</legend>
      <input type="file" name="content" value="Upload..."/>
      <label>/media/</label><input type="text" name="uri"/>
      <button type="submit" class="btn btn-default btn-xs">Upload Media</button>
    </fieldset>
  </form>

  <ml:admin-media-list/>
</ml:page>
